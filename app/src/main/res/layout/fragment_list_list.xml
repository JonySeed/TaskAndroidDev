<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jony.taskandroiddev.fragment.ListFragment">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2e7a7a7a"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttoDeleteSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:text="@string/button_delete_selected"
            android:layout_margin="5sp"/>
        <Button
            android:id="@+id/buttoClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:text="@string/button_clear_list"
            android:layout_margin="5sp"/>
    </LinearLayout>
    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listRecords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:layout_above="@id/footer"/>

    <TextView
        android:id="@+id/textEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>


</RelativeLayout >
